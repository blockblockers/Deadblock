{
  "name": "deadblock",
  "version": "1.0.0",
  "description": "DEADBLOCK - Strategic pentomino placement puzzle game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "cap:init": "cap init DEADBLOCK com.deadblock.game",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "cap:update": "cap update",
    "android:add": "cap add android",
    "android:open": "cap open android",
    "android:run": "cap run android",
    "android:build": "npm run build && cap copy android && cap open android",
    "android:sync": "npm run build && cap sync android",
    "ios:add": "cap add ios",
    "ios:open": "cap open ios",
    "ios:run": "cap run ios",
    "ios:build": "npm run build && cap copy ios && cap open ios",
    "ios:sync": "npm run build && cap sync ios",
    "mobile:build": "npm run build && cap sync",
    "mobile:prepare": "npm run build && cap copy",
    "icons:generate": "node scripts/generate-icons.js",
    "splash:generate": "node scripts/generate-splash.js",
    "assets:generate": "npm run icons:generate && npm run splash:generate"
  },
  "dependencies": {
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.2.1",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@supabase/supabase-js": "^2.87.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/ios": "^6.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.8"
  },
  "keywords": [
    "puzzle",
    "game",
    "pentomino",
    "strategy",
    "mobile",
    "pwa",
    "capacitor"
  ],
  "author": "Kevin Casselbury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockblockers/Deadblock"
  }
}
